<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"><![CDATA[
    tools:context="com.example.stevenmacdonald.cardgameproject.StartGameActivity">


    ]]>

    <TextView
        android:id="@+id/answerTextView"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_marginLeft="136dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="136dp"
        tools:layout_editor_absoluteY="-63dp" />

    <ImageButton
        android:id="@+id/StartGameButton"
        android:layout_width="292dp"
        android:layout_height="64dp"
        android:layout_marginBottom="154dp"
        android:layout_marginLeft="61dp"
        android:onClick="buttonClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/startgamefont" />

    <Switch
        android:id="@+id/tutorialSwitch"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@android:color/white"
        android:contentDescription="Tutorial"
        android:text="Switch"
        android:textOff="OFF"
        android:textOn="ON"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartGameButton" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="111dp"
        android:layout_height="29dp"
        app:srcCompat="@drawable/tutorialtext"
        app:layout_constraintRight_toLeftOf="@+id/tutorialSwitch"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="125dp" />

</android.support.constraint.ConstraintLayout>
