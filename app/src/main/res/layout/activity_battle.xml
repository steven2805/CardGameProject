<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/battleactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbattle">
tools:context="com.example.stevenmacdonald.cardgameproject.BattleActivity">

    <TextView
        android:id="@+id/card3TextView"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/PlayerCard3"
        app:layout_constraintLeft_toLeftOf="@+id/PlayerCard3" />

    <TextView
        android:id="@+id/card2TextView"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/PlayerCard2"
        app:layout_constraintLeft_toLeftOf="@+id/PlayerCard2" />

    <ImageButton
        android:id="@+id/PlayerCard1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="32dp"
        android:onClick="onButtonClick1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/charmander" />

    <ImageButton
        android:id="@+id/PlayerCard2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="24dp"
        android:onClick="onButtonClick2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/PlayerCard1"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/PlayerCard3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="22dp"
        android:onClick="onButtonClick3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/PlayerCard2"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="34dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/playerBattleImg"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="241dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/Card1TextView"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/PlayerCard1"
        app:layout_constraintLeft_toLeftOf="@+id/PlayerCard1"
        tools:layout_editor_absoluteY="295dp" />

    <ImageView
        android:id="@+id/ToolTip"
        android:layout_width="329dp"
        android:layout_height="92dp"
        android:layout_marginBottom="-32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/card2TextView"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/tooltip" />

    <ImageView
        android:id="@+id/computerBattleImg"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="241dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/playerBattleImg"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/tutorialpt2img"
        android:layout_width="354dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/pixalspeechbubble02"
        android:clickable="true"
        android:onClick="tutorialImg2DisappearOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694" />

    <ImageView
        android:id="@+id/guide2img"
        android:layout_width="166dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/guide02"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/tutorialpt1img"
        android:layout_width="386dp"
        android:layout_height="384dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:onClick="tutorialImgDisappearOnClick"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887"
        app:srcCompat="@drawable/pixalspeechbubble1" />

    <ImageView
        android:id="@+id/guideimg1"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/guide01" />

    <CheckBox
        android:id="@+id/ruleSwapCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />


</android.support.constraint.ConstraintLayout>
