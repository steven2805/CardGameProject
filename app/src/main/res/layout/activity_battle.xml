<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbattle">
tools:context="com.example.stevenmacdonald.cardgameproject.BattleActivity">

    <TextView
        android:id="@+id/card3TextView"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/PlayerCard3"
        app:layout_constraintLeft_toLeftOf="@+id/PlayerCard3" />

    <TextView
        android:id="@+id/card2TextView"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/PlayerCard2"
        app:layout_constraintLeft_toLeftOf="@+id/PlayerCard2" />

    <ImageButton
        android:id="@+id/PlayerCard1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="32dp"
        android:onClick="onButtonClick1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/charmander" />

    <ImageButton
        android:id="@+id/PlayerCard2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="24dp"
        android:onClick="onButtonClick2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/PlayerCard1"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/PlayerCard3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="22dp"
        android:onClick="onButtonClick3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/PlayerCard2"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="34dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/playerBattleImg"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginBottom="241dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:text="ToggleButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/Card1TextView"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/PlayerCard1"
        app:layout_constraintLeft_toLeftOf="@+id/PlayerCard1"
        tools:layout_editor_absoluteY="295dp" />

    <ImageView
        android:id="@+id/ToolTip"
        android:layout_width="329dp"
        android:layout_height="92dp"
        android:layout_marginBottom="-32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/card2TextView"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/tooltip" />


</android.support.constraint.ConstraintLayout>
